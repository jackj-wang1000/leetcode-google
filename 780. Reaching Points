class Solution {
    public boolean reachingPoints(int sx, int sy, int tx, int ty) {
        // time complexity: O(log(min(tx,ty)))
        // space complexity: O(1)
        // algorithm: iteratation
        while (tx > sx && ty > sy) {
            if (tx >= ty) {
                tx = tx % ty;
            }
            else {
                ty = ty % tx;
            }
        }
        if (tx == sx) {
            return ty >= sy && (ty - sy) % tx == 0;
        }
        else if (ty == sy) {
            return tx >= sx && (tx - sx) % ty == 0;
        }
        return false;   
    }
}
